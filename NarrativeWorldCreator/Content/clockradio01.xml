  <Variable name="tu4" value="0.5+0.5*0.282" />
  <Variable name="z5" value="(-0.5 + 0.425) * width" />
  <Variable name="tu5" value="0.5+0.5*0.425" />
  <Variable name="z6" value="0.5 * width" />
  <Variable name="tu6" value="1" />
  <Variable name="y1" value="height" />
  <Variable name="tv1" value="0.5" />
  <Variable name="y2" value="(1 - 0.184) * height" />
  <Variable name="tv2" value="0.5+0.25*0.184" />
  <Variable name="y3" value="(1 - 0.682) * height" />
  <Variable name="tv3" value="0.5+0.25*0.682" />
  <Variable name="y4" value="0" />
