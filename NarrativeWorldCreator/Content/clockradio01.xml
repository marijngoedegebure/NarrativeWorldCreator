<MainLayout name="Clock radio 01">

  <Material id="1" file="..\\content\\textures\\clock.png">
    <Shader type="Vertex" filename="..\\content\\shaders\\default.vert" />
    <Shader type="Fragment" filename="..\\content\\shaders\\default.frag" />
  </Material>
  <Material id="2" file="..\\content\\textures\\clock_numbers3.png">
    <Shader type="Vertex" filename="..\\content\\shaders\\default.vert" />
    <Shader type="Fragment" filename="..\\content\\shaders\\2digitNumber.frag">
      <SemanticParameter name="number" evaluationString="world->Time()->Hour()" type="double" defaultValue="12" />
    </Shader>
  </Material>
  <Material id="3" file="..\\content\\textures\\clock_numbers3.png">
    <Shader type="Vertex" filename="..\\content\\shaders\\default.vert" />
    <Shader type="Fragment" filename="..\\content\\shaders\\2digitNumber.frag">
      <SemanticParameter name="number" evaluationString="world->Time()->Minute()" type="double" defaultValue="34" />
    </Shader>
  </Material>

