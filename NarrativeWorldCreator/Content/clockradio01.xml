  <Variable name="depth" value="0.15" />
  <Variable name="height" value="0.04" />
  
  <Variable name="black" value="(0;0;0;1)" />
  <Variable name="x1" value="depth * 0.5" />
  <Variable name="z1" value="-width * 0.5" />
  <Variable name="tu1" value="0.5" />
  <Variable name="z2" value="(-0.5 + 0.106) * width" />
  <Variable name="tu2" value="0.5+0.5*0.106" />
