<MainLayout name="office window">
  <RequiredInput name="width" comment="Width of the window." />
  <RequiredInput name="height" comment="Height of the window." />
  <RequiredInput name="heightToFloor" comment="The height of the window to the floor." />

  <Material id="1" diffuse="1.0;0.6;0.6;1.0" specular="0.9;0.9;0.9;1.0" name="basic window frame material" />
  <Material id="2" transparency="0.4" name="transparent window material" />
  <Material id="3" diffuse="0.5;0.54;0.67;1.0" specular="0.9;0.9;0.9;1.0" name="window frame material" />
  <Material id="4" diffuse="1;1;1;1" file="../content/texture/concrete.png" name="inside window sill material" />

  <Variable name="white" value="(1;1;1;1)" />
  <Variable name="frameColor" value="(0.31;0.31;0.41;1)" />

  <Variable name="w2" value="width * 0.5" />
  <Variable name="h1" value="heightToFloor" />
  <Variable name="h2" value="height - 0.04" />

  <Instruction value="BO:Box:-0.1;h1+0.02;0;0.2;0.04;width+0.08;4;white" />
  <Instruction value="BO:Box:0;h1+0.07;0;0.05;0.06;width-0.12;3;frameColor" />
  <Instruction value="BO:Box:0;h1+0.04+h2*0.5;0;0.005;h2-0.12;width-0.12;2;white" />
  <Instruction value="BO:Box:0;h1+0.04+h2-0.03;0;0.05;0.06;width-0.12;3;frameColor" />
  <Instruction value="BO:Box:0;h1+0.04+h2*0.5;-w2+0.03;0.05;h2;0.06;3;frameColor" />
  <Instruction value="BO:Box:0;h1+0.04+h2*0.5; w2-0.03;0.05;h2;0.06;3;frameColor" />
</MainLayout>