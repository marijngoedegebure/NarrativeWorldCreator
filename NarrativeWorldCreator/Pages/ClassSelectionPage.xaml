<Page x:Class="NarrativeWorldCreator.Pages.ClassSelectionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NarrativeWorldCreator.GraphicScenes"
      xmlns:views = "clr-namespace:NarrativeWorldCreator.Views"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="ClassSelectionPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="0" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Row="0" Grid.Column="0" FontSize="30" Margin="10,10,0,0">Entity selection</TextBlock>
            <TextBlock Grid.Row="1" Grid.Column="0" Margin="10,0,0,0" Text="In this screen you are able to select the entities which you will later use to instance objects from. The left column shows the entities which are mentioned in the story for this location. The middle and right column allow selection and deselection of entities."/>
            <WrapPanel Grid.Row="2" Grid.Column="0" HorizontalAlignment="Left" DockPanel.Dock="Top" Margin="10">
                <Button x:Name="GotoGraphPageButton" Content="Back" HorizontalAlignment="Left" Margin="0,0,10,0" VerticalAlignment="Top" Width="200" Click="btnGraphPage_Click"/>
                <Button x:Name="RegionPageButton" Content="Next" Margin="0,0,10,0" HorizontalAlignment="Right" Width="200" Click="btnRegionPage_Click"/>
            </WrapPanel>
        </Grid>
        <Grid Grid.Row="1" Grid.Column="0" Margin="0,50,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <TextBlock Margin="10,10,0,0" Grid.Column="0" Grid.Row="0" FontWeight="Bold">Required entities</TextBlock>
                <TextBlock Margin="10,10,0,0" Grid.Column="1" Grid.Row="0" FontWeight="Bold">Available entities</TextBlock>
                <TextBlock Margin="10,10,0,0" Grid.Column="2" Grid.Row="0"></TextBlock>
                <TextBlock Margin="10,10,0,0" Grid.Column="3" Grid.Row="0" FontWeight="Bold">Selected entities</TextBlock>
                <TextBlock Margin="10,0,0,0" Grid.Column="0" Grid.Row="1">The list of entities that are mentioned in the story and are thus required to be placed.</TextBlock>
                <TextBlock Margin="10,0,0,0" Grid.Column="1" Grid.Row="1">The list of available entities, ordered using criteria that measure fill value.</TextBlock>
                <TextBlock Margin="10,0,0,0" Grid.Column="2" Grid.Row="1"></TextBlock>
                <TextBlock Margin="10,0,0,0" Grid.Column="3" Grid.Row="1">The list of selected entities.</TextBlock>
                
                <ItemsControl Name="RequiredTOIC"
                  Grid.Column="0"
                  Grid.Row="2"
                  Margin="10" 
                  ItemsSource = "{Binding Path = TangibleObjects }">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Grid.Row="0" Text="{Binding DefaultName, StringFormat='Name: {0}'}"/>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <views:TangibleObjectsSwapView Grid.Column="1" Grid.Row="2" x:Name="AvailableSwapView" Loaded = "AvailableSwapView_Loaded"/>
                <Grid Grid.Row="2" Grid.Column="2" Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0"  Grid.Row="0" x:Name="MoveToSelected" Content="To Selected" Margin="50" Click="btnMoveToSelected"/>
                    <Button Grid.Column="0"  Grid.Row="2" x:Name="MoveToAvailable" Content="To Available" Margin="50" Click="btnMoveToAvailable"/>
                </Grid>
                <views:TangibleObjectsSwapView Grid.Column="3" Grid.Row="2" x:Name="SelectedSwapView" Loaded = "SelectedSwapView_Loaded"/>
            </Grid>
        </Grid>
    </Grid>
</Page>
